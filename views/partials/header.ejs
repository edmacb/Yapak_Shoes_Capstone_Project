    <!--LOGO-->
    <a href="/" class="-m-1.5">
      <img class="h-28 w-auto" src="../../assets/images/logo.webp" alt="" />
    </a>
    <div class="flex flex-1 justify-end">
      <a href="/cart" class="group -m-2 flex items-center p-2">
        <svg
          class="h-6 w-6 flex-shrink-0 text-gray-700 group-hover:text-gray-500"
