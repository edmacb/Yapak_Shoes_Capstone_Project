<div class="bg-white">
  <div>
    <div class="border-b border-gray-200">
      <nav
        aria-label="Breadcrumb"
        class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8"
      >
        <ol role="list" class="flex items-center space-x-4 py-4">
          <li>
            <div class="flex items-center">
              <a href="/products/men" class="mr-4 text-sm font-medium">Men</a>
              <svg
                viewBox="0 0 6 20"
                aria-hidden="true"
                class="h-5 w-auto text-gray-300"
              >
                <path
                  d="M4.878 4.34H3.551L.27 16.532h1.327l3.281-12.19z"
                  fill="currentColor"
                />
              </svg>
            </div>
          </li>

          <li class="text-sm">
            <a
              href="/products/women"
              aria-current="page"
              class="font-medium hover:text-gray-600"
              >Women</a
            >
          </li>
        </ol>
      </nav>
    </div>

    <main class="mx-auto max-w-2xl px-4 lg:max-w-7xl lg:px-8">
      <div class="border-b border-gray-200 pb-10 pt-24">
        <img src="<%= headerImage %>" />
      </div>

      <div class="pb-24 pt-12 lg:grid lg:grid-cols-3 lg:gap-x-8 xl:grid-cols-4">
        <aside>
          <h2 class="sr-only">Filters</h2>

          <!-- Mobile filter dialog toggle, controls the 'mobileFilterDialogOpen' state. -->
          <button type="button" class="inline-flex items-center lg:hidden">
            <span class="text-sm font-medium text-gray-700">Filters</span>
            <svg
              class="ml-1 h-5 w-5 flex-shrink-0 text-gray-400"
              viewBox="0 0 20 20"
              fill="currentColor"
              aria-hidden="true"
            >
              <path
                d="M10.75 4.75a.75.75 0 00-1.5 0v4.5h-4.5a.75.75 0 000 1.5h4.5v4.5a.75.75 0 001.5 0v-4.5h4.5a.75.75 0 000-1.5h-4.5v-4.5z"
              />
            </svg>
          </button>

          <div class="hidden lg:block">
            <form class="space-y-10 divide-y divide-gray-200">
              <div class="pt-10">
                <fieldset>
                  <legend class="block text-sm font-medium text-gray-900">
                    Category
                  </legend>
                  <div class="space-y-3 pt-6">
                    <% if (categories.length) {%> <% for (category of
                    categories) { %> <%-
                    include('../../components/checkbox.ejs', {label:
                    category.label, id: category.id, value: category.value}) %>
                    <% } %> <% } %>
                  </div>
                </fieldset>
              </div>

              <div class="pt-10">
                <fieldset>
                  <legend class="block text-sm font-medium text-gray-900">
                    Sizes
                  </legend>
                  <div class="space-y-3 pt-6">
                    <% if (sizes.length) {%> <% for (size of sizes) { %> <%-
                    include('../../components/checkbox.ejs', {label: size.label,
                    id: size.id, value: size.value}) %> <% } %> <% } %>
                  </div>
                </fieldset>
              </div>
            </form>
          </div>
        </aside>

        <section
          aria-labelledby="product-heading"
          class="mt-6 lg:col-span-2 lg:mt-0 xl:col-span-3"
        >
          <h2 id="product-heading" class="sr-only">Products</h2>

          <div
            class="grid grid-cols-1 gap-y-4 sm:grid-cols-2 sm:gap-x-6 sm:gap-y-10 lg:gap-x-8 xl:grid-cols-2"
          >
            <% if (items.length) {%> <% for (item of items) { %> <%-
            include('../../components/product-item.ejs', {imageRefSecondary:
            item.imageRefSecondary, id: item.id, imageRef: item.imageRef, title:
            item.title, description: item.description, colors: item.colors,
            price: item.price}) %> <% } %> <% } %>
            <!-- More products... -->
          </div>
        </section>
      </div>
    </main>
  </div>
</div>
